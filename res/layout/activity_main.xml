<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView 
        android:id="@+id/label_device_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/device_id"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/device_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_device_id"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/label_device_id"
        android:textIsSelectable="true"
        android:textSize="20sp" />
 
     
	<Button
        android:id="@+id/get_device_id_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_id"
        android:layout_centerHorizontal="true"
        android:onClick="getDeviceId"
        android:layout_marginTop="10dp"
        android:text="@string/get_device_id" />
    


</RelativeLayout>